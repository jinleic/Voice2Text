<!-- res/drawable/button_speak_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#374151"/> <!-- Darker shade for the pressed state -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#282a36"/> <!-- Normal state color -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
